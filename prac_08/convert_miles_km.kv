BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.text_calculate(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.text_calculate(input_number.text, -1)
    Button:
        text: 'Convert'
        # the following line specifies the function in the app class to call when the button is pressed
        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (255,153,204,1.000)